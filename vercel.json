{
  "version": 2,
  "functions": { "api/**/*.py": { "maxDuration": 30 } },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.py" },
    { "source": "/v2/api/(.*)", "destination": "/api/index.py" },
    { "source": "/(.*\\.js)", "destination": "/$1" },
    { "source": "/(.*\\.css)", "destination": "/$1" },
    { "source": "/(.*\\.png)", "destination": "/$1" },
    { "source": "/(.*\\.jpg)", "destination": "/$1" },
    { "source": "/(.*\\.svg)", "destination": "/$1" },
    { "source": "/(.*\\.webp)", "destination": "/$1" },
    { "source": "/(.*\\.mp3)", "destination": "/$1" },
    { "source": "/(.*\\.woff2)", "destination": "/$1" },
    { "source": "/(.*\\.ttf)", "destination": "/$1" },
    { "source": "/(.*\\.atlas)", "destination": "/$1" },
    { "source": "/(.*\\.json)", "destination": "/$1" }
  ],
  "env": { "FLASK_ENV": "production" }
}